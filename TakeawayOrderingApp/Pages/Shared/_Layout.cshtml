<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TakeawayOrderingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TakeawayOrderingApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm border-bottom box-shadow mb-3" style="background-color: #8f2e2e">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/ContactUs">Contact Us</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top footer text-white pt-5 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <h5>Site Map</h5>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-0">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="mb-0">
                            <a href="#!">Menu</a>
                        </li>
                        <li class="mb-0">
                            <a href="#!">Gallery</a>
                        </li>
                        <li class="mb-0">
                            <a href="#!">Contact Us</a>
                        </li>
                        <li class="mb-0">
                            <a href="#!">Login</a>
                        </li>
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <h5>Opening Hours</h5>
                    <ul class="list-unstyled">
                        <li>Monday:     17:00  22:00</li>
                        <li>Tueday:     Closed Closed</li>
                        <li>Wednesday:  17:00  22:30</li>
                        <li>Thursday:   17:00  22:30</li>
                        <li>Friday:     17:00  23:00</li>
                        <li>Saturday:   17:00  23:00</li>
                        <li>Sunday:     17:00  22:30</li>
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <h5>Address</h5>
                    <p>
                        Gardenia Chinese<br /> 
                        80A Church Road <br />
                        Tiptree <br /> 
                        Colchester <br />
                        CO5 0HB
                    </p>
                    <p>Telephone: 01621 819988</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>